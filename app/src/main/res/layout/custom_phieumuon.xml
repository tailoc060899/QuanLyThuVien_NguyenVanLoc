<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/botron">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_mathuthu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã thủ thư: TT01"
                android:textSize="13dp" />
            <TextView
                android:id="@+id/tv_Trasach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã trả sách"
                android:textSize="14dp"
                android:textColor="#1436F1"/>
        </LinearLayout>

        <TextView
                android:id="@+id/tv_tenTVPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tên TV: nguyễn văn a"
                android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_tenSachPm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sách: java1"
            android:textSize="18dp"
            android:textColor="#101010"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_tienThue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền thuê: 10000"
                android:textSize="13dp" />
            <TextView
                android:layout_marginLeft="55dp"
                android:id="@+id/tv_ngaythue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày mượn: 2020-10-10"
                android:textSize="13dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btn_editPM"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit" />
        <ImageButton
            android:id="@+id/btn_deletePM"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"/>
    </LinearLayout>

</LinearLayout>