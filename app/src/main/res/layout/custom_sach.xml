<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/botron">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="2dp">
        <TextView
            android:id="@+id/tv_maloai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã loại sách: 1"
            android:textSize="13dp" />
        <TextView
            android:id="@+id/tv_tenSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sách: Công nghệ thông tin"
            android:textSize="15dp"
            android:textColor="#2443EC"/>
        <TextView
            android:id="@+id/tv_giathue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="giá thuê: 10000"
            android:textSize="12dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_giakm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="giá thuê: 10000"
                android:textSize="13dp"
                android:textColor="@color/black" />
            <TextView
                android:layout_marginLeft="50dp"
                android:id="@+id/tv_sl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="giá thuê: 10000"
                android:textSize="13dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btn_edit_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit" />
        <ImageButton
            android:id="@+id/btn_delete_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete" />
    </LinearLayout>

</LinearLayout>